{
    "name": "integration-karma",
    "private": true,
    "version": "1.18.0-alpha2",
    "scripts": {
        "start": "karma start ./scripts/karma-configs/local.js",
        "start:compat": "yarn start --browsers Chrome --compat",
        "start:native": "yarn start --browsers Chrome --native-shadow",
        "start:mixed": "yarn start --browsers Chrome --force-mixed-mode",
        "test": "karma start ./scripts/karma-configs/local.js --single-run --browsers Chrome",
        "sauce": "karma start ./scripts/karma-configs/sauce.js --single-run",
        "coverage": "node ./scripts/merge-coverage.js"
    },
    "devDependencies": {
        "@lwc/compiler": "1.18.0-alpha2",
        "@lwc/engine": "1.18.0-alpha2",
        "@lwc/rollup-plugin": "1.18.0-alpha2",
        "@lwc/synthetic-shadow": "1.18.0-alpha2",
        "chokidar": "^3.5.1",
        "istanbul-lib-coverage": "^3.0.0",
        "istanbul-lib-report": "^3.0.0",
        "istanbul-reports": "^3.0.2",
        "karma": "^5.2.3",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.3",
        "karma-jasmine": "^4.0.1",
        "karma-sauce-launcher": "4.3.4"
    }
}
